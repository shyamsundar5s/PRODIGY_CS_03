import re

def assess_password_strength(password):
    # Initialize variables to track criteria
    length = len(password)
    has_upper = re.search(r'[A-Z]', password) is not None
    has_lower = re.search(r'[a-z]', password) is not None
    has_digit = re.search(r'\d', password) is not None
    has_special = re.search(r'[@$!%*?&#]', password) is not None
    
    # Score calculation
    score = 0
    if length >= 8:
        score += 1
    if has_upper:
        score += 1
    if has_lower:
        score += 1
    if has_digit:
        score += 1
    if has_special:
        score += 1

    # Provide feedback based on score
    if score == 5:
        strength = "Very Strong"
    elif score == 4:
        strength = "Strong"
    elif score == 3:
        strength = "Medium"
    elif score == 2:
        strength = "Weak"
    else:
        strength = "Very Weak"
    
    # Detailed feedback
    feedback = []
    if length < 8:
        feedback.append("- Password should be at least 8 characters long.")
    if not has_upper:
        feedback.append("- Include at least one uppercase letter.")
    if not has_lower:
        feedback.append("- Include at least one lowercase letter.")
    if not has_digit:
        feedback.append("- Include at least one digit.")
    if not has_special:
        feedback.append("- Include at least one special character (e.g., @, $, %, &, etc.).")
    
    return strength, feedback

def main():
    while True:
        password = input("Enter your password to assess: ")
        strength, feedback = assess_password_strength(password)

        # Display results
        print(f"Password Strength: {strength}")
        if feedback:
            print("Suggestions to improve your password:")
            for tip in feedback:
                print(tip)
        
        again = input("Do you want to assess another password? (y/n): ").lower()
        if again != 'y':
            print("Goodbye!")
            break

if _name_ == "_main_":
    main()
